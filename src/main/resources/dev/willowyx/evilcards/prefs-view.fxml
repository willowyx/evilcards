<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.CheckBox?>
<BorderPane minWidth="450.0" minHeight="350.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.willowyx.evilcards.PrefsController" stylesheets="@main.css">
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <top>
        <VBox alignment="TOP_CENTER">
            <Label styleClass="header" text="prefs"/>
            <Label styleClass="header" text="disclaimer: "/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <CheckBox fx:id="romantical_toggle" text="romantical hikikomori mode"/>
            <CheckBox fx:id="nobet_toggle" text="no betting mode"/>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_CENTER" spacing="20.0">
            <Button text="cancel"/>
            <Button text="apply" defaultButton="true"/>
        </HBox>
    </bottom>
</BorderPane>
