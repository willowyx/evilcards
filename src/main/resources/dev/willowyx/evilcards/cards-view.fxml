<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane minWidth="600.0" minHeight="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.willowyx.evilcards.CardUIController" stylesheets="@cards.css">
    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <top>
        <VBox spacing="20.0">
            <TextArea fx:id="log_text" editable="false"/>
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <VBox alignment="CENTER" spacing="20.0">
                    <Text text="Dealer's Hand" styleClass="infolabel"/>
                    <Pane fx:id="dealerpane" prefHeight="150" prefWidth="600" styleClass="primarypane">
                        <!-- cards -->
                    </Pane>

                    <Text text="Player's Hand" styleClass="infolabel"/>
                    <Pane fx:id="playerpane" prefHeight="150" prefWidth="600" styleClass="primarypane">
                        <!-- cards -->
                    </Pane>
                </VBox>
                <TextArea fx:id="game_text" editable="false"/>
            </HBox>
        </VBox>
    </top>

    <bottom>
        <VBox alignment="BOTTOM_CENTER" spacing="20.0" fx:id="actionpane">
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="ac_hit" text="Hit" disable="true"/>
                <Button fx:id="ac_stand" text="Stand" disable="true"/>
                <Button fx:id="ac_double" text="Double" disable="true"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
                <TextField fx:id="wInput" promptText="bet..."/>
                <Button fx:id="startbtn" text="Start" onAction="#onStartnew"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
                <Button text="save" onAction="#onSave"/>
                <Button text="player stats" onAction="#onStatView"/>
                <Button fx:id="quitbtn" text="end day" onAction="#onsoftquit"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
